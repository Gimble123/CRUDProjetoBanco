<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="eduardostertz.cursoandroid.teste.activity.User">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Id do UsuÃ¡rio" />

        <EditText
            android:id="@+id/editTextNomeUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nome" />

        <EditText
            android:id="@+id/editTextCpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Cpf" />

        <EditText
            android:id="@+id/editTextDataNascimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Data de Nascimento" />

        <EditText
            android:id="@+id/editTextCidadeNatal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Cidade" />

        <EditText
            android:id="@+id/editTextEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Estado" />


        <TextView
            android:id="@+id/textView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text=""
            android:textSize="40sp" />

        <Button
            android:id="@+id/buttonCriar"
            android:layout_width="156dp"
            android:layout_height="51dp"
            android:layout_marginTop="51dp"
            android:layout_marginLeft="80dp"
            android:onClick="criar"
            android:text="Criar" />

        <Button
            android:id="@+id/buttonLer"
            android:layout_width="156dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:onClick="ler"
            android:text="Ler" />

        <Button
            android:id="@+id/buttonAtualizar"
            android:layout_width="156dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:onClick="atualizar"
            android:text="Atualizar" />

        <Button
            android:id="@+id/buttonDeletar"
            android:layout_width="156dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="20dp"
            android:onClick="deletar"
            android:text="Deletar" />


    </LinearLayout>
</ScrollView>